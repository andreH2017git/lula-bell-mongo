<div class ='category-content'id="category-content"> <!-- need this class to add left margin -->
  <% if @items.empty? %>
    <h4>Hmm, looks like there's nothing here...</h4>
  <% else %>
    <% if request.url.split("/")[-1].include?("search") %>
      <h3>Search results for "<%= params[:query] %>"</h3>
    <% else %>
      <h3><%= request.url.split("/")[-1].titleize %></h3>
    <% end %>
    <h2></h2>
    <div class="row" id="container">
      <%@items.each do |item| %>
        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2">
          <div class="img-thumbnail">
            <a href="<%=item_path(item)%>">
              <img src="<%= item.image.url %>" alt="<%= item.name %>" width="150" height="150">
            </a>
            <div class="img-caption">
              <% if item.name.size > 22 %>
                <%= item.name[0..19]+"..." %>
              <% else %>
                <%= item.name %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  <div id="paginate">
    <%= will_paginate @items %>
  </div>
</div>
