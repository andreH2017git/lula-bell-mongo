<div class="single-item-view">
  <div class="container">
    <div class="item-image">
      <%= image_tag @item.image.url(:medium) %>
    </div>
    <div class="main-column">
      <div class="item-name">
        <h3><%= @item.name %></h3>
      </div>
      <div class="item-description">
        <%= @item.description %>
      </div>
      <div class="item-features">
        <% @features.each do |feature| %>
          <p> <%= "#{capitalize(feature)} - " %><%= @item.attributes[feature] %></p>
        <% end %>
      </div>
      <% if admin_signed_in? %>
        <div class="edit-button">
          <%=link_to "Edit Item", edit_item_path(@item)%>
        </div>
      <% end %>
    </div>
    <div class="left-column">
      <h5>This item is currently <span>available</span>.</h5>
      <% if @item.reservable %>
      <div class="reserve-button">
        <%= link_to("Reserve", {:controller => 'reserves', :action => 'new',:id => @item.id})%>
      </div>
      <% end %>
    </div>
  </div>
  <div class="links">
    <%= link_to "Back", :back %>
    <% if admin_signed_in? %>
       | <%= link_to "Delete", item_path(@item),
                            method: :delete,
                            data: { confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>
