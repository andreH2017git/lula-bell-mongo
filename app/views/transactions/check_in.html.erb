<%= link_to("<<Back to Check In",{:controller => 'transactions', :action => 'notice'}, :class => 'back-link')%>

<div class="transactions notice">
  <h2>Check In!</h2>

  <%= form_for(:transaction, :url => {:action => 'update', :id => @transaction.id}) do |f| %>
    <table>
      <tr>
        <th>Student ID</th>
        <td><%= f.text_field(:student_id, :readonly => true) %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= f.date_field(:start_date, :order => [:month, :day, :year], :readonly => true) %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= f.date_field(:end_date, :order => [:month, :day, :year], :readonly => true) %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= f.select(:status, ['In','On the floor']) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Check In") %>
    </div>

  <% end %>
</div>
