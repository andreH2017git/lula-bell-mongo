<%= link_to("<<Back to Check Out",{:controller => 'transactions', :action => 'display'}, :class => 'back-link')%>

<div class="transactions display">
  <h2>Check Out!</h2>

  <%= render(:partial => 'info') %>

  <%= form_for(:transaction, :url => {:action => 'create'}) do |f| %>
    <table>
      <tr>
        <th>Student ID</th>
        <td><%= f.text_field(:student_id) %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= f.date_select(:start_date, :order => [:month, :day, :year]) %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= f.date_select(:start_date, :order => [:month, :day, :year]) %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= f.select(:status, ['Out','On the floor']) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Add Item") %>
    </div>

  <% end %>
</div>
