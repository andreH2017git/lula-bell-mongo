<%= link_to("<<Back to Check Out",{:controller => 'transactions', :action => 'display'}, :class => 'back-link')%>

<div class="transactions display">
  <h2>Check Out!</h2>

  <%= render(:partial => 'info') %>

  <%= form_for(@transaction, :url => transactions_path, :method => 'post') do |f| %>
    <table>
      <tr>
        <th>Student ID</th>
        <td><%= f.text_field(:student_id) %></td>
      </tr>
      <!--<tr>
        <th>Confirm Student ID</th>
        <td><%#= f.text_field(:student_id_confirmation) %></td>
      </tr> -->
      <tr>
        <th>Object ID</th>
        <td><%= f.text_field(:item_id, :value => "#{@item.id}", :readonly => true) %></td>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= f.date_field(:start_date, :order => [:month, :day, :year]) %></td>
      </tr>
      <% if @item.rentable%>
        <tr>
          <th>End Date</th>
          <td><%= f.date_field(:end_date, :order => [:month, :day, :year]) %></td>
        </tr>
      <% else %>
        <%= f.hidden_field(:end_date, :order => [:month, :day, :year], :readonly => true) %>
      <% end %>
    </table>
    <div class="form-buttons">
      <%= f.submit("Check Out") %>
    </div>

  <% end %>
</div>
