<%= link_to("<<Back to Check Out",{:controller => 'transactions', :action => 'display'}, :class => 'back-link')%>

<div class="transactions display">
  <h2>Check Out!</h2>

  <%= render(:partial => 'info') %>

  <%= form_for(@transaction, :url => transactions_path, :method => 'post') do |f| %>
    <table>
      <tr>
        <th>Student ID</th>
        <td><%= f.text_field(:student_id) %></td>
      </tr>
      <tr>
        <th>Email Address</th>
        <% if @item.rentable %>
          <td><%= f.text_field(:email) %></td>
        <% else %>
          <td><%= f.text_field(:email, :value => 'None', :readonly => true) %></td>
        <% end %>
      </tr>
      <tr>
        <th>Start Date</th>
        <td><%= f.date_field(:start_date, :order => [:month, :day, :year]) %></td>
      </tr>
      <tr>
        <th>End Date</th>
        <td><%= f.date_field(:end_date, :order => [:month, :day, :year]) %></td>
      </tr>
      <tr>
        <th>Status</th>
        <td><%= f.select(:status, ['Out','On the floor']) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Check Out") %>
    </div>

  <% end %>
</div>
